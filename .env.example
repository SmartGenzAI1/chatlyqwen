# @file .env.example
# @brief Environment configuration template for Chatly
# @author Chatly Development Team
# @date 2025-12-08
#
# This file serves as a template for environment variables used in the Chatly
# application. Copy this file to .env and fill in the actual values for your
# development and production environments. Never commit the .env file to
# version control - it contains sensitive information.

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=chatly-production.firebaseapp.com
FIREBASE_PROJECT_ID=chatly-production
FIREBASE_STORAGE_BUCKET=chatly-production.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:android:abcdef1234567890abcdef12

# API Keys
UNSPLASH_API_KEY=your_unsplash_api_key_here
PERSPECTIVE_API_KEY=your_perspective_api_key_here
REVENUECAT_API_KEY=your_revenuecat_api_key_here

# App Configuration
APP_ENV=development
DEBUG=true
MAINTENANCE_MODE=false

# Notification Configuration
FCM_SERVER_KEY=your_fcm_server_key_here
NOTIFICATION_ICON=@drawable/ic_notification

# Security Configuration
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
SESSION_TIMEOUT_MINUTES=30

# Rate Limiting
MAX_SIGNUPS_PER_IP_PER_DAY=3
MAX_MESSAGES_PER_DAY_FREE=200
MAX_MESSAGES_PER_DAY_PLUS=500
MAX_MESSAGES_PER_DAY_PRO=1000

# Analytics
ANALYTICS_ENABLED=true
CRASHLYTICS_ENABLED=true

# Content Moderation
TOXICITY_THRESHOLD=0.7
BANNED_WORDS_FILE=assets/banned_words.txt

# Algorithm Configuration
SMART_NOTIFICATION_ENABLED=true
MIN_BATTERY_LEVEL_FOR_BATCHING=20
MIN_CONVERSATION_HEALTH_SCORE=0.3

# Example values for development:
# FIREBASE_API_KEY=AIzaSyD_example_api_key
# UNSPLASH_API_KEY=your_unsplash_api_key
# PERSPECTIVE_API_KEY=your_perspective_api_key
# REVENUECAT_API_KEY=your_revenuecat_api_key

# IMPORTANT: 
# 1. Copy this file to .env and fill in your actual values
# 2. Add .env to your .gitignore file
# 3. Never commit .env to version control
# 4. For production, set these values in your deployment environment
